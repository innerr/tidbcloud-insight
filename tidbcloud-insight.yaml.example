auth:
  client_id: "your-o11y-client-id"
  client_secret: "your-o11y-client-secret"
  token_url: "https://tidb-soc2.us.auth0.com/oauth/token"
  audience: "https://tidb-soc2.us.auth0.com/api/v2/"

cache: "./cache"

meta: "./meta"

fetch_timeout: "5m"

idle_timeout: "3m"

# Target chunk size in bytes for each metric request
# The program will adjust the time range per request to aim for this size
# Default: 1048576 (1MB)
target_chunk_size: 1048576

rate_limit:
  max_backoff: "5m"
  desired_concurrency: 3
  recovery_interval: "30s"
  min_recovery_interval: "10s"

logging:
  log_all_http_codes: false
  verbose: false
